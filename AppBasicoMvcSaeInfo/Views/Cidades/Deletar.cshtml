@model AppBasicoMvcSaeInfo.Models.Cidade

@{
    ViewData["Title"] = "Delete";
}

<div>
    <h4>Deletar Cidade</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <p class="font-weight-bold">Cidade: </p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            <p class="font-weight-bold">Estado: </p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado.Nome)
        </dd>
        <dt class="col-sm-2">
            <p class="font-weight-bold">Sigla: </p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado.Sigla)
        </dd>
    </dl>

    <form asp-action="Deletar">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
