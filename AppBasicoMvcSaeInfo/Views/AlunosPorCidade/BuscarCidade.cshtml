@model IEnumerable<AppBasicoMvcSaeInfo.Models.Cidade>

@{
    ViewData["Title"] = "BuscaAlunoPorCidade";
}

<h1>Busca Aluno por Cidade</h1>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                Cidades
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-action="BuscarAlunoPorCidade" asp-route-id="@item.Id" class="btn btn-info">Detalhes</a> 
            </td>
        </tr>
}
    </tbody>
</table>
